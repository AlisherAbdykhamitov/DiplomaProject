<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="280dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    android:elevation="8dp"
    android:layout_marginLeft="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical"
        >
        
        <ImageView
            android:id="@+id/image_recycler_view_first"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:src="@drawable/recycler_view_first"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/text_recycler_view_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Help"
            android:textColor="@color/textBlack"
            android:textSize="20dp"
            android:fontFamily="@font/abril_fatface"/>

        <TextView
            android:id="@+id/desc_recycler_view_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A set of volunteer help situations. Volunteers at work. Helping people, animals and nature."
            android:textColor="@color/text_desc"
            android:textSize="10dp"/>


    </LinearLayout>





</androidx.cardview.widget.CardView>
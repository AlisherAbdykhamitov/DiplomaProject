<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoryDonations"
    android:background="@color/lightWhite">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"  >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="15dp"
            android:src="@drawable/back_icon1"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="15dp"
            android:src="@drawable/search_icon"/>



    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="charitable foundations"
        android:textSize="30sp"
        android:fontFamily="@font/abril_fatface"
        android:textAllCaps="true"
        android:padding="10dp"
        android:textColor="@color/textBlack"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_margin="15dp"
        android:background="@color/colorAccent">

        <ImageView
            android:id="@+id/image2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            tools:src="@drawable/ukrainefund" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:singleLine="false"
                android:textColor="@color/textBlack"
                android:textSize="18sp"
                android:maxLines="2"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Ukraine Crisis Relief Fund"/>

            <TextView
                android:id="@+id/likes"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="15dp"
                android:text="Total amount: "
                android:textColor="@color/textBlack"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/likeBtn" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <Button
                    android:layout_width="84dp"
                    android:layout_height="29dp"
                    android:layout_marginLeft="56dp"
                    android:background="#03A9F4"
                    android:text="Donate"
                    android:textColor="@color/lightWhite"
                    android:textSize="14dp"></Button>
                <ImageButton
                    android:id="@+id/save1"
                    android:layout_width="26dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="10dp"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/like"
                    app:layout_constraintEnd_toEndOf="parent"></ImageButton>
            </RelativeLayout>


        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:background="@color/colorAccent">

    <ImageView
        android:id="@+id/image"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        tools:src="@drawable/madagascarfund" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:singleLine="false"
            android:textColor="@color/textBlack"
            android:textSize="18sp"
            android:maxLines="2"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Madagascar Famine Relief Fund"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="15dp"
            android:text="Total amount: "
            android:textColor="@color/textBlack"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/likeBtn" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <Button
                android:layout_width="84dp"
                android:layout_height="29dp"
                android:text="Donate"
                android:textSize="14dp"
                android:textColor="@color/lightWhite"
                android:layout_marginLeft="56dp"
                android:background="#03A9F4">
            </Button>
            <ImageButton
                android:id="@+id/save"
                android:layout_width="26dp"
                android:layout_height="28dp"
                android:layout_marginLeft="10dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/like"
                app:layout_constraintEnd_toEndOf="parent"></ImageButton>
        </RelativeLayout>

    </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:background="@color/colorAccent">

            <ImageView
                android:id="@+id/image3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/logo"
                tools:src="@drawable/niet" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:singleLine="false"
                    android:textColor="@color/textBlack"
                    android:textSize="18sp"
                    android:maxLines="2"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="Charitable Foundation Niet"/>

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginTop="5dp"
                    android:text="Total amount: "
                    android:textColor="@color/textBlack"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/likeBtn" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_width="84dp"
                        android:layout_height="29dp"
                        android:text="Donate"
                        android:textSize="14dp"
                        android:textColor="@color/lightWhite"
                        android:layout_marginLeft="56dp"
                        android:background="#03A9F4">
                    </Button>
                    <ImageButton
                        android:id="@+id/save3"
                        android:layout_width="26dp"
                        android:layout_height="28dp"
                        android:layout_marginLeft="10dp"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/like"
                        app:layout_constraintEnd_toEndOf="parent"></ImageButton>
                </RelativeLayout>

            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:background="@color/colorAccent">

            <ImageView
                android:id="@+id/image4"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/logo"
                tools:src="@drawable/charity1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:singleLine="false"
                    android:textColor="@color/textBlack"
                    android:textSize="18sp"
                    android:maxLines="2"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="Charitable Foundation - Great Heart"/>

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginTop="5dp"
                    android:text="Total amount: "
                    android:textColor="@color/textBlack"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/likeBtn" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_width="84dp"
                        android:layout_height="29dp"
                        android:text="Donate"
                        android:textSize="14dp"
                        android:textColor="@color/lightWhite"
                        android:layout_marginLeft="56dp"
                        android:background="#03A9F4">
                    </Button>
                    <ImageButton
                        android:id="@+id/save4"
                        android:layout_width="26dp"
                        android:layout_height="28dp"
                        android:layout_marginLeft="10dp"
                        android:adjustViewBounds="true"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/like"
                        app:layout_constraintEnd_toEndOf="parent"></ImageButton>
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginSignup.StartUpScreen"
    android:background="#FEFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="40dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:src="@drawable/start_up_photo" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="55dp"
            android:fontFamily="@font/muli_light_italic"
            android:text="Donation"
            android:textAlignment="center"
            android:textColor="@color/textBlack"
            android:textSize="36dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/advent_pro_semibold"
            android:text="The measure of life is not its duration, but its donation."
            android:textColor="@color/textBlack"
            android:textAlignment="center"
            android:textSize="16dp"
            android:layout_marginTop="5dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="25dp"
            android:layout_gravity="center">

            <Button
                android:id="@+id/login_btn"
                android:layout_width="190dp"
                android:layout_height="35dp"
                android:textAllCaps="false"
                android:background="#03A9F4"
                android:layout_gravity="center"
                android:text="Login"
                android:onClick="callLoginScreen"
                android:transitionName="transition_login"/>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="-------- OR --------"
            android:textAlignment="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="25dp">
            <Button
                android:id="@+id/signup_btn"
                android:layout_width="190dp"
                android:layout_height="35sp"
                android:text="Sign up"
                android:textAllCaps="false"

                android:textColor="#FFFFFF"
                android:background="#000000"
                android:onClick="signupStart"
                android:transitionName="transition_signup"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
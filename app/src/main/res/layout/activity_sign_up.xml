<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/loginBackground"
        android:padding="30dp"
        android:transitionName="transition_signup"
        tools:context=".LoginSignup.SignUpFirst">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/signup_back_button_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:src="@drawable/login_back"
                android:transitionName="transition_back_btn" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp">


                <TextView
                    android:id="@+id/signup_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create\nAccount"
                    android:textSize="40dp"
                    android:textColor="@color/textBlack"
                    android:textAllCaps="true"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:layout_marginTop="20dp"
                    android:transitionName="transition_title_text" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:orientation="vertical">


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/signup_fullname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Full Name"
                    android:textColorHint="@color/textBlack"
                    app:boxStrokeColor="@color/textBlack"
                    app:boxStrokeWidthFocused="2dp"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/textBlack"
                    app:hintTextColor="@color/textBlack"
                    app:startIconDrawable="@drawable/write_icon"
                    app:startIconTint="@color/textBlack">


                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/muli_light_italic"
                        android:inputType="text"
                        android:textColor="@color/textBlack"
                        android:textCursorDrawable="@null" />


                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/signup_username"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Username"
                    android:textColorHint="@color/textBlack"
                    app:boxStrokeColor="@color/textBlack"
                    app:boxStrokeWidthFocused="2dp"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/textBlack"
                    app:hintTextColor="@color/textBlack"
                    app:startIconDrawable="@drawable/user_icon_24dp"
                    app:startIconTint="@color/textBlack">


                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/muli_light_italic"
                        android:inputType="text"
                        android:textColor="@color/textBlack"
                        android:textCursorDrawable="@null" />


                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/signup_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter email"
                    android:textColorHint="@color/textBlack"
                    app:boxStrokeColor="@color/textBlack"
                    app:boxStrokeWidthFocused="2dp"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/textBlack"
                    app:hintTextColor="@color/textBlack"
                    app:startIconDrawable="@drawable/mail_icon_24"
                    app:startIconTint="@color/textBlack">


                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/muli_light_italic"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/textBlack"
                        android:textCursorDrawable="@null" />


                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/signup_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:textColorHint="@color/textBlack"
                    app:boxStrokeColor="@color/textBlack"
                    app:boxStrokeWidthFocused="2dp"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/textBlack"
                    app:hintTextColor="@color/textBlack"
                    app:startIconDrawable="@drawable/password_icon"
                    app:startIconTint="@color/textBlack">


                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/muli_light_italic"
                        android:inputType="textPassword"
                        android:textColor="@color/textBlack"
                        android:textCursorDrawable="@null" />


                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>

        <Button
            android:id="@+id/sign_next_btn_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:background="@color/textBlack"
            android:textColor="@color/white"
            android:onClick="callNextSignupScreen"
            android:layout_marginTop="30dp"
            android:elevation="5dp"
            android:fontFamily="@font/muli_light_italic"
            android:transitionName="transition_next_btn"/>

        <Button
            android:id="@+id/sign_login_btn_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:background="#00000000"
            android:textColor="@color/textBlack"
            android:layout_marginTop="30dp"
            android:elevation="5dp"
            android:onClick="loginFromSignUp"
            android:fontFamily="@font/muli_light_italic"
            android:transitionName="transition_login_btn"/>

    </LinearLayout>

</ScrollView>